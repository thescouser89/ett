<% if Rails::VERSION::STRING < "4" %>
  <% form_for :jira_bug, @jira_bug, :url => { :action => "create" } do |f| %>
	  <table>
		  <tr><td>Summary:</td>
		  <td><%= f.text_field :summary %></td></tr>
		  <tr><td>Priority:</td>
		  <td><%= f.text_field :priority%></td></tr>
	  </table>
  <% end %>
<% else %>
    <%= render 'jira_bugs/new_rails4' %>
<% end %>
