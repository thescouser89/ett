<div id="comment_mini_form_<%= package.id %>">
<% if Rails::VERSION::STRING < "4" %>
  <% form_remote_tag(
             :url => {:controller => 'comments', :action => 'create'},
             :loading => "Element.show('spinner_comment_#{package.id}');",
             :success => "Element.hide('spinner_comment_#{package.id}');") do %>

      <%= hidden_field_tag :package_id, package.id %>
      <%= hidden_field_tag :pos, 'mini' %>

      <div style="text-align: left;">
        <%= render :partial => 'layouts/sep_tiny' %>
        Add Comment:
        <%= render :partial => 'layouts/sep_tiny' %>
        <textarea name="comment" rows="5" cols="22"></textarea>
        <%= render :partial => 'layouts/sep_tiny' %>

        <%= submit_tag 'Post' %>

        <input type="button"
               value="Cancel"
               onclick="Element.hide('comment_mini_form_<%=package.id%>')"/>

        <%= render :partial => 'layouts/progress_indicator',
                   :locals => {:progress_indicator_id => "spinner_comment_#{package.id}"} %>
        <%= render :partial => 'layouts/sep_tiny' %>
      </div>
  <% end %>
<% else %>
    <%= render 'comments/new_mini_form_rails4', {:package => package} %>
<% end %>
</div>
