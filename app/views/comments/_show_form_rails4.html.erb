              <%= form_tag(
                         {:controller => 'comments', :action => 'destroy', :id => comment.id},
                         :remote => true,
                         :html => {:id => "comment-form-#{comment.id}"},
                         :loading => "Element.show('spinner-delete-comment-#{comment.id}');",
                         :success => "Element.hide('div-comment-#{comment.id}');",
                         :confirm => 'Are you sure?') do %>
                  <%= hidden_field_tag '_method', 'delete' %>
                  <%= hidden_field_tag :id, comment.id %>
                  <%= render :partial => 'layouts/progress_indicator',
                             :locals => {:progress_indicator_id => "spinner-delete-comment-#{comment.id}"} %>
                  <%= submit_tag 'Delete' %>
              <% end %>
