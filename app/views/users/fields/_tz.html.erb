<tr>
  <td align='right'>
    <%= f.label :time_zone %>
  </td>
  <td align='left'>
    <select name="time_zone" id="time_zone">
      <% if Rails::VERSION::STRING < "4" %>
        <% TimeZone.all(:order => 'tz_offset').each do |tz| %>
            <option value="<%= tz.id %>" <% if tz == @user.tz %>selected<% end %>><%= tz.text %></option>
        <% end %>
      <% else %>
        <% TimeZone.all.order('tz_offset').each do |tz| %>
            <option value="<%= tz.id %>" <% if tz == @user.tz %>selected<% end %>><%= tz.text %></option>
        <% end %>
      <% end %>
    </select>
  </td>
</tr>
