<% unless @package.notes.blank? %>
    <%= render :partial => 'layouts/sep' %>
    <h3>Notes</h3>
    <%= render :partial => 'layouts/line' %>
    <% if Rails::VERSION::STRING < "4" %>
    	<%= Extractor.extract_url(@package.notes) %>
    <% else %>
    	<%= h(Extractor.extract_url(@package.notes)).gsub("\n", "<br>").html_safe %>
    <% end %>
<% end %>
